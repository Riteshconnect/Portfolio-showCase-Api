{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["es6"],
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ],
 "exclude": [
    "node_modules",
    "src/routes/__tests__" 
  ]
}